<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">+ Tambah Data Contact</a>
      <% if (msg.length !== 0) { %>
        <tr>
          <td colspan="4">
            <div class="alert alert-success " role="alert">
              <%= msg %>
            </div>
          </td>
        </tr>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length == 0) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger " role="alert">
                  Data contact masih kosong.
                </div>
              </td>
            </tr>
          <% } else{%>
          <% let no = 1; contacts.forEach(cnt => { %>
            <tr>
              <th scope="row"><%= no++ %></th>
              <td><%= cnt.nama %></td>
              <td><%= cnt.noHP %></td>
              <td>
                <a href="/contact/<%= cnt.id %>" class="btn btn-success badge"><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr>
            <% }); %>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>